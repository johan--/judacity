<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextChildNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextChild</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/child_text_size</item>
    </style>

    <style name="TextChildBold" parent="TextChildNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/child_bold_text_size</item>

    </style>
    <style name="TextChildHead" parent="TextChildNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/child_head_text_size</item>

    </style>


</resources>
