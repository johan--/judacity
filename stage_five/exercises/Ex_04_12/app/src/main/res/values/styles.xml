<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowContentTransitions">true</item>-->

    </style>

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="android:windowSharedElementEnterTransition">@transition/move_custom</item>
    </style>

    <!--exit-->
    <style name="AppTheme.Home.Stay" parent="AppTheme.Home">
        <item name="android:windowSharedElementEnterTransition">@transition/move</item>

    </style>


    <style name="AppTheme.Home.Explode" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
    </style>

    <style name="AppTheme.Home.Explode.R" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/grid_exit</item>
        <item name="android:windowReenterTransition">@transition/slide_top</item>
        <item name="android:windowTransitionBackgroundFadeDuration">700</item>
    </style>

    <style name="AppTheme.Home.Right.R" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/slide_right</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
        <item name="android:windowReenterTransition">@transition/slide_left</item>
    </style>


    <style name="AppTheme.Home.Top" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/slide_top</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.Home.Right" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/slide_right</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
    </style>

    <style name="AppTheme.Home.Left" parent="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/slide_left</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>

    </style>

    <!--enter-->
    <style name="AppTheme.Details" parent="AppTheme.Home">
        <item name="android:windowEnterTransition">@transition/slide_right</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
        <!--<item name="android:windowSharedElementEnterTransition">@transition/hero</item>-->
    </style>

    <style name="AppTheme.Details.Bottom" parent="AppTheme.Home">
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
        <!--<item name="android:windowSharedElementEnterTransition">@transition/hero</item>-->
    </style>

    <style name="AppTheme.Details.Fade" parent="AppTheme.Home">
        <item name="android:windowEnterTransition">@transition/slide_fade</item>
        <item name="android:windowTransitionBackgroundFadeDuration">900</item>
        <!--<item name="android:windowSharedElementEnterTransition">@transition/hero</item>-->
    </style>

</resources>
