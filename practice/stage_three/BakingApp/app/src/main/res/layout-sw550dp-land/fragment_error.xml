<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/error_text_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="0dp"
        android:paddingEnd="8dp"

        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:text="@string/message_error_line1"
        android:textAppearance="@style/TextNormal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/error_text_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="8dp"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:text="@string/message_error_line2"
        android:textAppearance="@style/TextNormal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_line1" />

    <TextView
        android:id="@+id/error_text_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:text="@string/message_error_line3"
        android:textAppearance="@style/TextNormal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_line2" />


    <Button
        android:id="@+id/error_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/error_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_line3"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/error_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/error_retry"
        app:layout_constraintLeft_toRightOf="@+id/error_close"
        app:layout_constraintRight_toLeftOf="@+id/error_exit"
        app:layout_constraintTop_toBottomOf="@+id/error_text_line3"
        app:layout_constraintHorizontal_bias="0.50"
        />

    <Button
        android:id="@+id/error_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/error_exit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_line3" />


</android.support.constraint.ConstraintLayout>