<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowTranslucentStatus">false</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Progress_Bar_Horizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>


    <style name="TextToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
    </style>

    <style name="Item.TextRecycler" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rm_text_color_dark</item>
        <item name="android:textSize">@dimen/text_rm_item_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Left.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Right.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Large.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_large_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Country.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_country_size</item>
    </style>

    <style name="League.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_league_size</item>
    </style>

<!--match-->
    <style name="Match.TextRecycler" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sm_text_color_light</item>
        <item name="android:textSize">@dimen/text_sm_item_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Left.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Right.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Large.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_time_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Date.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_date_size</item>
    </style>


    <style name="Country.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_country_size</item>
    </style>

    <style name="League.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_league_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--recycler-->
    <style name="Head.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_head_size</item>
        <item name="android:gravity">start|center</item>
        <item name="android:lines">2</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textStyle">bold</item>-->

    </style>

    <style name="TextTab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sliding_tabs_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="Color.TextHead" parent="TextHead">
        <item name="android:textColor">@color/color_dialog_head_text</item>
    </style>

    <style name="Text.Calendar" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_calendar_head_back</item>
        <item name="android:textColor">@color/color_calendar_head_text</item>
    </style>

    <style name="Large.Text.Calendar" parent="Text.Calendar">
        <item name="android:textSize">@dimen/calendar_head_large_text_size</item>
    </style>


    <!--dialog-->
    <style name="Dialog.Title" parent="android:Widget.TextView">
        <item name="android:background">@color/color_dialog_head_back</item>
        <item name="android:textAppearance">@style/Color.TextHead</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="Custom.Dialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/Dialog.Title</item>
        <item name="android:buttonStyle">@style/dialog_button_style</item>
    </style>


    <style name="Calendar.Dialog" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/color_calendar_accent</item>

        <item name="android:buttonStyle">@style/dialog_button_style</item>
    </style>


    <style name="dialog_button_style" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorButtonText</item>
    </style>


</resources>
