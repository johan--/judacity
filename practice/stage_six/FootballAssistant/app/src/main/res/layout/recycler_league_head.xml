<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_match_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_micro"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_rm_item_radius">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraint_recycler_match_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/league_lg_head_back" >


        <TextView
            android:id="@+id/text_lg_pos"
            style="@style/Pos.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_pos_dsc"
            android:text="@string/text_lg_head_team_pos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v1"
            app:layout_constraintStart_toEndOf="@+id/separator_v1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_team_name"
            style="@style/Name.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/text_lg_head_team_name_dsc"
            android:text="@string/text_lg_head_team_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v3"
            app:layout_constraintStart_toEndOf="@+id/separator_v2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

        <TextView
            android:id="@+id/text_lg_matches"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_matches_dsc"
            android:text="@string/text_lg_head_team_matches"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v4"
            app:layout_constraintStart_toStartOf="@+id/guide_v3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_points"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_points_dsc"
            android:text="@string/text_lg_head_team_points"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v5"
            app:layout_constraintStart_toStartOf="@+id/guide_v4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_goals"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_goals_dsc"
            android:text="@string/text_lg_head_team_goals"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v6"
            app:layout_constraintStart_toStartOf="@+id/guide_v5"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_lg_wins"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_wins_dsc"
            android:text="@string/text_lg_head_team_wins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v7"
            app:layout_constraintStart_toStartOf="@+id/guide_v6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_draws"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_draws_dsc"
            android:text="@string/text_lg_head_team_draws"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v8"
            app:layout_constraintStart_toEndOf="@+id/separator_v7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_losses"
            style="@style/Value.Head.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_head_team_losses_dsc"
            android:text="@string/text_lg_head_team_losses"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v9"
            app:layout_constraintStart_toEndOf="@+id/separator_v8"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/separator_v1"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v2"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v3"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v4"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v5"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v6"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v7"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v8"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v9"
            android:layout_width="@dimen/margin_micro"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_h1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_micro"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_horizontal_dsc"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_h2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_micro"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_horizontal_dsc"
            app:layout_constraintBottom_toBottomOf="parent" />


        <android.support.constraint.Guideline
            android:id="@+id/guide_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <android.support.constraint.Guideline
            android:id="@+id/guide_v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.74" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.82" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.98" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>