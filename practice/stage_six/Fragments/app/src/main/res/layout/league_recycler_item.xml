<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_match_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    app:cardCornerRadius="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_recycler_league_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/match_recycler_card_back_light">


        <TextView
            android:id="@+id/text_lg_team_pos"
            style="@style/Pos.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_pos_dsc"
            android:text="@string/text_test_lg_item_team_pos_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v1"
            app:layout_constraintStart_toEndOf="@+id/separator_v1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_lg_team_logo"
            android:layout_width="@dimen/image_lg_item_team_logo_size"
            android:layout_height="@dimen/image_lg_item_team_logo_size"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/image_lg_team_logo_dsc"
            android:scaleType="fitCenter"
            android:src="@drawable/fc_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/separator_v2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_lg_team_name"
            style="@style/Name.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/text_lg_team_name_dsc"
            android:text="@string/text_test_lg_item_team_name_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v3"
            app:layout_constraintStart_toEndOf="@+id/image_lg_team_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

        <TextView
            android:id="@+id/text_lg_matches"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_matches_dsc"
            android:text="@string/text_test_lg_item_team_pos_122"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v4"
            app:layout_constraintStart_toStartOf="@+id/guide_v3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_points"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_points_dsc"
            android:text="@string/text_test_lg_item_team_pos_165"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v5"
            app:layout_constraintStart_toStartOf="@+id/guide_v4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_goals"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_goals_dsc"
            android:text="@string/text_test_lg_item_team_pos_112"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v6"
            app:layout_constraintStart_toStartOf="@+id/guide_v5"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_lg_wins"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_wins_dsc"
            android:text="@string/text_test_lg_item_team_pos_177"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v7"
            app:layout_constraintStart_toStartOf="@+id/guide_v6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_draws"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_draws_dsc"
            android:text="@string/text_test_lg_item_team_pos_182"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v8"
            app:layout_constraintStart_toEndOf="@+id/separator_v7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_lg_losses"
            style="@style/Value.Item.League"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/text_lg_team_losses_dsc"
            android:text="@string/text_test_lg_item_team_pos_134"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/separator_v9"
            app:layout_constraintStart_toEndOf="@+id/separator_v8"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/separator_v1"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v2"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v3"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v4"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v5"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_v6"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v7"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v7"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v8"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guide_v8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_v9"
            android:layout_width="@dimen/margin_tiny"
            android:layout_height="match_parent"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_vertical_dsc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/separator_h1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_tiny"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_horizontal_dsc"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/separator_h2"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_tiny"
            android:background="@color/league_lg_item_separator"
            android:contentDescription="@string/text_lg_team_separator_horizontal_dsc"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_v9"
            app:layout_constraintStart_toEndOf="@+id/separator_v1" />


        <android.support.constraint.Guideline
            android:id="@+id/guide_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <android.support.constraint.Guideline
            android:id="@+id/guide_v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.46" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.73" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.82" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.91" />

        <android.support.constraint.Guideline
            android:id="@+id/guide_v9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="1.0" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>