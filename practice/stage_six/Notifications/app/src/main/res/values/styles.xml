<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="TextBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bold_text_size</item>

    </style>
    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <!--widget-->
    <style name="Match.Widget" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sm_text_color_light</item>
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Match.Light.Widget" parent="Match.Widget">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Team.Match.Widget" parent="Match.Widget">
        <item name="android:gravity">center|top</item>
        <item name="android:lines">3</item>
    </style>
    <style name="Time.Match.Widget" parent="Match.Widget">
        <item name="android:textSize">@dimen/widget_text_time_size</item>
    </style>
    <style name="League.Match.Widget" parent="Match.Light.Widget">
        <item name="android:textSize">@dimen/widget_text_league_size</item>
    </style>
    <style name="Score.Match.Widget" parent="Match.Light.Widget">
        <item name="android:textSize">@dimen/widget_text_score_size</item>
    </style>






</resources>
