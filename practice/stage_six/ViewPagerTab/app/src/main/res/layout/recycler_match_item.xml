<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_match_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="@android:color/transparent"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_recycler_match_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/recycler_back">

        <TextView
            android:id="@+id/text_tm_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Home Team Name"
            android:textColor="@color/recycler_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>