<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="TextBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bold_text_size</item>

    </style>

    <style name="TextLarge" parent="TextNormal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/bold_text_size</item>
    </style>

    <style name="TextExtra" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!--button styles-->

    <style name="dialog_button_style" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorTextGreenBlue</item>
    </style>


    <style name="dialog_button_style2" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorTextJoke</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style3" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_brown</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="button_blue" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="button_blue_wide" parent="@style/button_blue">
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="button_red" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="button_green" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="button_green_wide" parent="@style/button_green">
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="button_salad" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_salad</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="button_salad_wide" parent="@style/button_salad">
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="button_salad_dark" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_salad_dark</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>
    <style name="button_salad_dark_wide" parent="@style/button_salad_dark">
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:padding">12dp</item>
    </style>


</resources>
