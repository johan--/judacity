<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="TextBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bold_text_size</item>

    </style>

    <style name="TextLarge" parent="TextNormal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/bold_text_size</item>
    </style>

    <style name="TextExtra" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!--button styles-->

    <style name="dialog_button_style" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorTextGreenBlue</item>
    </style>


    <style name="dialog_button_style2" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorTextJoke</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style3" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_brown</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style4" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style5" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style6" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style6w" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextBold</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="dialog_button_style7" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_salad</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style8" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_salad_dark</item>
        <item name="android:textColor">@color/colorTextGreenDark</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>
</resources>
