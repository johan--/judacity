<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--appbar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <!--toolbar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="TextBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bold_text_size</item>

    </style>

    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="TextLarge" parent="TextNormal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>



    <!--progress bar-->
    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/colorProgressBar</item>
        <item name="android:secondaryProgressTint">@color/colorProgressBar</item>
        <item name="android:indeterminateTint">@color/colorProgressBar</item>
    </style>
    <style name="ProgressBarStyle" parent="@style/ProgressBarTheme"  >
        <item name="android:minWidth">@dimen/progress_bar_size</item>
        <item name="android:maxWidth">@dimen/progress_bar_size</item>
        <item name="android:minHeight">@dimen/progress_bar_size</item>
        <item name="android:maxHeight">@dimen/progress_bar_size</item>
    </style>

    <!--card-->
    <style name="CardTextNormal" parent="TextNormal">
        <item name="android:textColor">@color/colorCardText</item>
        <item name="android:textSize">@dimen/card_text_size</item>

    </style>

    <style name="CardTextHead" parent="TextNormal">
        <item name="android:textColor">@color/colorCardHead</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/card_head_size</item>
    </style>


    <!--dialog-->
    <style name="CustomDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
        <item name="android:buttonStyle">@style/dialog_button_style</item>
    </style>

    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextHead</item>
    </style>

    <style name="dialog_button_style" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorButtonText</item>

    </style>


</resources>
