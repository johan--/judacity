<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tr_text"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#ffb74d"
            android:gravity="center"
            android:text="B"
            android:textAppearance="@android:style/TextAppearance.Material.Display4"
            android:textColor="#afff"
            android:transitionName="hero" />

        <View
            android:id="@+id/tr_view1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#bbb" />

        <View
            android:id="@+id/tr_view2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view3"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view4"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginEnd="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view5"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginEnd="88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view6"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginEnd="240dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view7"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view8"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />

        <View
            android:id="@+id/tr_view9"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="#ccc" />


    </LinearLayout>
</ScrollView>
